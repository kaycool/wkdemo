<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <moe.feng.material.statusbar.StatusBarHeaderView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/status_bar_header_view"
            app:colorNormal="@color/toolbar_default_background_dark"
            app:colorDarker="@color/toolbar_default_background_dark_darker"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_default_background_dark"/>

    </LinearLayout>

</LinearLayout>